<div class="container">
  <div class="blog_title">
    <h1>Admin</h1>
  </div>

  <div class="news_admin d-flex flex-row">
    <div class="col-sm-8">
    <% if @listOfNews.length > 0%>
      <% @listOfNews.each do |item| %>
        <div class="d-flex justify-content-start mb-5 flex-column">
          <div class="title d-flex flex-row">
            <div><h3><%= link_to item.news_title, news_path(item), class: "text-decoration-none"%></h3></div>
            <div class="news_function d-flex">
              <%= link_to "Edit" , edit_news_path(item.id), class: "btn btn-link"%> 
              <%= link_to 'Delete', news_path(item), class: "btn btn-link",data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> 
              <%if !item.isHide%>
              <%= button_to "Hide" , hide_path(item.id),method: :put,class: "  btn btn-link"%>
              <%else%>
              <%= button_to "Unhide" , hide_path(item.id),method: :put,class: "btn btn-link"%>
              <%end%>
            </div>
          </div>
          <div class="body">
            <p><%= item.news_body%> <a href="" class="text-decoration-none">Read more</a> </p>
          </div>
        </div>
      <% end %>
      <%else%>
      <p>There is no news</p>
      <%end%>
    </div>
    <!-- Missing closing div added here -->
     <div class="col-sm-4 ms-5 d-flex flex-column">
      <%= link_to "Create News", new_news_path, class: 'btn btn-primary mb-3' %>
      <%= link_to  "Categories Management", new_category_path, class: 'btn btn-primary mb-3' %>
      
    </div>
    </div> 
  </div>
</div>
