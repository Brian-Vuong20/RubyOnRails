<div class="container">
    <div class="new_container mt-5">
        <div class="news_info_container mb-5">
            <h2 style="color: #0ACDF8"><%= @news_item.news_title%></h2>
            <div class="mt-3">
                <h4 class="d-inline" style="color: #0ACDF8">Category:</h4>
                   
                <h5 class="d-inline m-3"><%= @category_name%></h5>
             
            </div>
            <div class="mt-3">
                <h4 class="d-inline" style="color: #0ACDF8">Source:</h4>
                <h5 class="d-inline m-3">BBC</h5>
            </div>
            <div class="mt-3">
                <h4 class="d-inline" style="color: #0ACDF8">Date:</h4>
                <h5 class="d-inline m-3"><%= @time%></h5>
            </div>
        </div>
        <div class="news_body">
            <p>
                <%= @news_item.news_body%>
            </p>
        </div>
        <div class="comment_container mt-5">
            <h5>Comments</h5>
            <% for i in 1..5%>
            <div class="comment_box mb-2">
                <p class="d-inline">1:20 pm 6/8/2023: </p><p class="d-inline">This is awsome</p>
            </div>
            <%end %>
            <div class="comment_field mt-5">
               <%= form_with url: '/my_forms', method: 'post' do |form| %>
                <div class="field">
                    <%= form.label :input_field, 'Enter your comment here' %>
                    <%= form.text_field :input_field, class: 'form-control mt-3' %>
                </div>
                <%= form.submit 'Submit', class: 'btn btn-primary mt-3' %>
                <% end %>
            </div>
        </div>
    </div>
    
</div>