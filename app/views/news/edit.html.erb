<div class="container mt-5">

<%= form_for(@news) do |f| %>
  <div class="input_form">
    <div class="mb-3">
      <%= f.label :Title, class: 'control-label mb-2' %>  
      <%= f.text_field :news_title, class: 'form-control' %>
    </div>
     <div class="mb-3">
      <%= f.label :Content, class: 'control-label mb-2' %>  
      <%= f.text_field :news_body, class: 'form-control' %>
    </div>
      <%= f.label :Category, class: 'control-label mb-2' %>  
      <%= f.select :category_id, options_for_select(Category.all.map { |c| [c.category_name, c.id] }), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <div class="mt-3">
      <%= f.submit 'Update', class: 'btn btn-primary col-2' %>
    </div>
  </div>
<% end %>
<div class="message mb-5">
  <p><%=flash[:message]%></p>
</div>
</div>




