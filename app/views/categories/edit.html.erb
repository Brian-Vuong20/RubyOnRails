<div class="container mt-5">

<%= form_for(@category) do |f| %>
  <div class="input_form">
    <div class="mb-3">
      <%= f.label "Category name", class: 'control-label mb-2' %>  
      <%= f.text_field :category_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="mt-3">
      <%= f.submit 'Update', class: 'btn btn-primary col-2' %>
    </div>
  </div>
<% end %>
<div class="message mb-5">
  <p><%=flash[:message]%></p>
</div>
</div>