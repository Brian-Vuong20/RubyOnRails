<div class="container mt-5">

<%= form_for(@category) do |f| %>
  <div class="input_form">
    <div class="mb-3">
      <%= f.label "Category name", class: 'control-label mb-2' %>  
      <%= f.text_field :category_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="mt-3">
      <%= f.submit 'Post', class: 'btn btn-primary col-2' %>
    </div>
  </div>
<% end %>
<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Category ID</th>
      <th scope="col">Category name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <% @categoryList.each do |category| %>  
  <tbody>
    <tr>
      <th scope="row"><%= category.id%></th>
      <td><%= category.category_name%></td>
      <td><%= link_to "Edit", edit_category_path(category.id)%> | <%= link_to "Delete",category_path(category.id), data: { turbo_method: :delete, turbo_confirm: "Delete this category will set all the posts that related to this category into uncategory" }%></td>
    </tr>
  </tbody>
<%end%>
</table>
<div class="message mb-5">
  <p><%=flash[:message]%></p>
</div>
</div>






